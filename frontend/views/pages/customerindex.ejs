<html>
    <body>
        <header>
            <%- include('partials/customernav'); %>
            <style>
                h1 {
                    padding-top: 30px;
                    padding-bottom: 30px;
                    padding-left: 100px;
                }
            </style>
        </header>
        <h1 class="cover-heading">Upcoming Appointments</h1>
        <div class="container text-dark">
            <table class="table table-striped table-bordered w-auto">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Appointment Date</th>
                    </tr>
                </thead>
                <tbody>
                    <%appointments.forEach(function(entry) {%>
                        <tr>
                            <td><%=entry.appointment_id%></td>
                            <td><%=entry.appointment_date%></td>
                        </tr>
                    <%});%>
                </tbody>
            </table>
        </div> 
    </body>
</html>
