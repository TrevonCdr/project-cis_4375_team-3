<html>
    <body>
        <header>
            <%- include('partials/customernav'); %>
        </header>
        <h1 class="cover-heading">New Appointment</h1>
        <div class = "container">
          <form action="/action_page.php">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter name">
              <small id="nameHelp" class="form-text text-muted">Please enter first and last name</small>
              <br></br>
            </div>
            <div class="form-group">
              <label for="date1">Date</label>
              <input type="datetime-local" class="form-control" id="date1">
              <br></br>
            </div>
            <div class="form-group">
              <label for="phoneNumber">Phone Number</label>
              <input type="tel" class="form-control" id="phoneNumber" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
              <br></br>
            </div>
            <div class="form-group">
              <h3>Available Employees</h3>
              <%employees.forEach(function(entry) {%>
              <input type="radio" class="form-check-input" id="<%=entry.employee_id%>" name="employee_name">
              <label for="<%=entry.employee_id%>"><%=entry.employee_first_name%> <%=entry.employee_last_name%></label>
              <br></br>
              <%});%>
              <br></br>  
            </div>
            <div class="form-group">
              <h3>Available Services</h3>
              <%services.forEach(function(entry) {%>
              <input type="checkbox" class="form-check-input" id="<%=entry.service_id%>">
              <label for="<%=entry.employee_id%>"><%=entry.service_type%> <%=entry.service_price%></label>
              <br></br>
              <%});%>
              <br></br>  
            </div>
            <div class="form-group">
                <textarea id="customer_note" name="comments" rows="4" cols="50" placeholder="Please enter any additional info"></textarea>
                <br></br>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form> 
    </body>
</html>
<style>
  h1 {
      padding-top: 30px;
      padding-bottom: 30px;
      padding-left: 100px;
  }
</style>
